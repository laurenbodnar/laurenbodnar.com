// for tocbot
#toc {
  font-size: 16px;
}

.toc-title {
  font-size: 1.5rem;
  font-weight: 400;
}

#tocbot ol {
  list-style: none;
}

.tocbot-list ol {
  list-style: none;
  padding-left: 15px;
}

.tocbot-link {
  color: #34495e;
}

.tocbot-active-link {
  font-weight: 600;
  color: #89229b;
}

.tocbot-is-collapsible {
  max-height: 1000px;
  overflow: hidden;
  transition: all 300ms ease-in-out;
}

.tocbot-is-collapsed {
  max-height: 0;
}

@media (max-width: 975px) {
  .post_content h1.post_title {
    font-size: 1.9rem;
  }
}
@media (min-width: 975px) {
  .post_content h1.post_title {
    //font-size: calc(20px + (26 - 14) * ((100vw - 300px) / (1600 - 300)));
    // line-height: calc(1.3em + (1.5 - 1.2) * ((100vw - 300px)/(1600 - 300)));
    font-size: 2vw;
    line-height: 45px
  }
}

