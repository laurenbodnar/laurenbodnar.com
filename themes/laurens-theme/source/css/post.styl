.post_title {
  display: block;
}

.post_content {
  padding: 0 8px;
}

.post_content p {
  font-size: 18px;
  font-weight: 400;
}

.post_content img {
  max-width: 100%;
}

.post_content .page-title {
  margin-bottom: 30px;
}

.post_content .page-title p.title {
  margin: 0px;
}

.post_content h1.post_title {
  padding-top:20px;
}

.post_content h1::before,
h2::before,
h3::before,
h4::before,
h5::before,
h6::before {
  content: " ";
  color: #0e5796;
}

.post_content h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 600;
  padding-top: 70px;
  margin-top: -70px;
}
