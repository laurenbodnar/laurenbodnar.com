@import "Material-Kit";


blockquote {
    margin: 20px 0;
    padding-left: 1.5rem;
    border-left: 5px solid #ee6e73;
}

.post-card{
    margin-top: 2rem;
}

.post-card i {
  vertical-align: middle;
}

.post-index-img {
    margin-bottom:20px;
    display:block;
    width: 100%;
    height: 160px;
    background-repeat: no-repeat;
    background-size:cover;
    border-radius: 6px;
    box-shadow: 0 16px 38px -12px rgba(0,0,0,0.56), 0 4px 25px 0 rgba(0,0,0,0.12), 0 8px 10px -5px rgba(0,0,0,0.2);
}

body.page-type-about .main>div>div.section {
  padding:0px
}


.instagram-wall__media {
border-radius: 6px;
box-shadow: 0 16px 38px -12px rgba(0,0,0,0.56), 0 4px 25px 0 rgba(0,0,0,0.12), 0 8px 10px -5px rgba(0,0,0,0.2);
}

@media (max-width: 992px) {
  .main-raised {
  margin:0px;
  border-radius:0px;
  box-shadow:none;
  }
}

@media (min-width: 992px) {
  .main-wrapper {
    padding:40px;
  }
  .instagram-sidebar {
    margin-top: -25px;
      padding-left: 40px;
  }
  .index-listing {
    border-radius: 6px;
    box-shadow: 0 16px 24px 2px rgba(0,0,0,0.14), 0 6px 30px 5px rgba(0,0,0,0.12), 0 8px 10px -5px rgba(0,0,0,0.2);
    margin-top: -115px;
    background-color: white;
    padding: 40px!important;
    padding-top:15px!important;
  }
  .post-layout-2 {
    margin: 0 0 0; z-index: 999;
  }
}
