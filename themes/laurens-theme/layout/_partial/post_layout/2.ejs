<div class="row post-layout-2">
  <div class="col-md-10 offset-md-1">
    <div class="main main-raised">
      <div class="container">
        <div class="section">
          <div class="post_content">
              <%- page.content %>
          </div>
          <br><br>
          <div>
              <p>
                  <% page.tags.each(function(tag) { %>
                    <a class="badge badge-default" href="/archives/#<%- tag.name %>">#&nbsp;<%- tag.name %></a>
                    &nbsp;
                  <% }) %>
              </p>
          </div>

          <br><hr>
          <div class="comments" id="comments">
          <%- partial('_partial/comments/fbook', page) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- TOC -->
  <%- partial('../toc') %>
</div>
